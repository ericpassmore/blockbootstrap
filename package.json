{
	"name": "blockbootstrap",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "cross-env ENVIRONMENT=DEV vite dev --config vite.base.config.ts",
		"build": "cross-env ENVIRONMENT=PROD vite build --config vite.base.config.ts",
		"preview": "cross-env ENVIRONMENT=DEV vite preview --config vite.base.config.ts",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "npx cross-env ENVIRONMENT=TEST vitest run tests/{api,db,unit}",
		"test:e2e": "npx cross-env ENVIRONMENT=TEST vitest run tests/e2e",
		"test:all": "npx cross-env ENVIRONMENT=TEST vitest run tests"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-vercel": "^5.9.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/node": "^24.0.12",
		"@vitest/browser": "^3.2.3",
		"cross-env": "^10.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"node-fetch": "^3.3.2",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"puppeteer": "^24.16.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@getbrevo/brevo": "^3.0.1",
		"@types/pg": "^8.15.5",
		"blockbootstrapagent": "file:../blockbootstrapagent/blockbootstrapagent-1.0.1.tgz",
		"chart.js": "^4.5.0",
		"dotenv": "^17.2.1",
		"drizzle-orm": "^0.44.4",
		"pg": "^8.16.3",
		"postgres": "^3.4.7"
	}
}
